{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@core-platform": ["./packages/core-platform/src/index.ts"],
      "@core-platform/*": ["./packages/core-platform/src/*"],
      "@epub-parser": ["./packages/epub-parser/src/index.ts"],
      "@epub-parser/*": ["./packages/epub-parser/src/*"],
      "@render-engine": ["./packages/render-engine/src/index.ts"],
      "@render-engine/*": ["./packages/render-engine/src/*"],
      "@state-store": ["./packages/state-store/src/index.ts"],
      "@state-store/*": ["./packages/state-store/src/*"],
      "@reader-app/*": ["./apps/reader/src/*"]
    },

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },

  "exclude": ["dist", "node_modules"]
}
